{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TypeScript with ts-node",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--loader", 
                "ts-node/esm"
            ],
            "args": [
                "${workspaceFolder}/src/server/src/index.ts"
            ],
            "cwd": "${workspaceFolder}/src/server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
